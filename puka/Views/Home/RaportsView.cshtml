@model  puka.Models.ReportsModel
@{
    ViewBag.Title = "RaportsView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("NewReport", "Home"))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="form-group">
            <div class="row">
                <div class="col-md-9">
                    @Html.LabelFor(m => m.title, new { @class = "label-form" })
                    @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
}
